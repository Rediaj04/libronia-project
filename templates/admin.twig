{% extends "base.twig" %}

{% block content %}
<div class="container mt-4">
    <h2>Panel de Administración</h2>

    <div class="mt-3">
        <h4>Lista de Libros</h4>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Título</th>
                    <th>Autor</th>
                    <th>Categoría</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                {% for libro in libros %}
                <tr>
                    <td>{{ libro.id }}</td>
                    <td>{{ libro.titulo }}</td>
                    <td>{{ libro.autor }}</td>
                    <td>{{ libro.categoria }}</td>
                    <td>
                        <a href="/editar/{{ libro.id }}" class="btn btn-warning btn-sm">Editar</a>
                        <a href="/eliminar/{{ libro.id }}" class="btn btn-danger btn-sm" onclick="return confirm('¿Estás seguro de eliminar este libro?');">Eliminar</a>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="5" class="text-center">No hay libros registrados.</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
