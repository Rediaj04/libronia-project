{% extends 'base.twig' %}

{% block title %}{{ libro.titulo }}{% endblock %}

{% block content %}
<div class="container">
    <h1 class="text-primary text-center mb-3">{{ libro.titulo }}</h1>

    <div class="row">
        <div class="col-md-4">
            <img src="{{ libro.imagen_url }}" class="img-fluid rounded shadow" alt="{{ libro.titulo }}">
        </div>
        <div class="col-md-8">
            <p><strong>Autor:</strong> {{ libro.nombre_autor }}</p>
            <p><strong>Categoría:</strong> {{ libro.nombre_categoria }}</p>
            <p><strong>Formato:</strong> {{ libro.formato }}</p>
            <p><strong>Número de páginas:</strong> {{ libro.num_paginas }}</p>
            <p><strong>Fecha de publicación:</strong> {{ libro.fecha_publicacion }}</p>
            <p><strong>Calificaciones:</strong> {{ libro.num_calificaciones }}</p>
            <p><strong>Reseñas:</strong> {{ libro.num_resenas }}</p>
            <p><strong>Descripción:</strong> {{ libro.descripcion }}</p>
            <a href="{{ libro.libro_url }}" class="btn btn-primary" target="_blank">Ver libro</a>
        </div>
    </div>

    <!-- Gráfico de Calificaciones y Reseñas -->
    <div class="mt-4">
        <h3>Comparación de Calificaciones y Reseñas</h3>
        <!-- Agregar una clase al canvas -->
        <canvas id="reviewsChart" class="small-chart"></canvas>
    </div>


</div>
{% endblock %}

{% block scripts %}
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    var ctx = document.getElementById('reviewsChart').getContext('2d');
    var reviewsChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: ['Calificaciones', 'Reseñas'],
            datasets: [{
                label: 'Cantidad',
                data: [{{ libro.num_calificaciones }}, {{ libro.num_resenas }}],
                backgroundColor: ['#3498db', '#e74c3c'],
                borderColor: ['#2980b9', '#c0392b'],
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });
</script>
{% endblock %}